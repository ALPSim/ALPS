<MODELS>
<SITEBASIS name="spin-1 boson">
  <PARAMETER name="NMax" default="1"/>
  <QUANTUMNUMBER name="N" min="0" max="NMax"/>
  <QUANTUMNUMBER name="J" min="0" max="N"/>
  <QUANTUMNUMBER name="Jz" min="-J" max="J"/>
</SITEBASIS>

<SITEBASIS name="spin-S boson">
  <PARAMETER name="NMax" default="1"/>
  <PARAMETER name="S" default="1"/>
  <QUANTUMNUMBER name="N" min="0" max="NMax"/>
  <QUANTUMNUMBER name="J" min="0" max="N*S"/>
  <QUANTUMNUMBER name="Jz" min="-J" max="J"/>
</SITEBASIS>

<SITEBASIS name="t-J">
  <PARAMETER name="NMax" default="1"/>
  <QUANTUMNUMBER name="N" min="0" max="NMax"/>
  <QUANTUMNUMBER name="Sz" min="-N/2" max="N/2"/>
</SITEBASIS>

<SITEBASIS name="t-J alternative">
  <QUANTUMNUMBER name="Nup" min="0" max="1"/>
  <QUANTUMNUMBER name="Ndown" min="0" max="1-Nup"/>
</SITEBASIS>
</MODELS>