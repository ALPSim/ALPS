srcdir = @srcdir@
top_srcdir = @top_srcdir@
builddir = @builddir@
top_builddir = ./@top_builddir@

DIR = alea fixed_capacity lattice model osiris parameter parser scheduler

default all libs programs examples tests install uninstall clean distclean depend : Makefile
	@dirs='$(DIR)'; for d in $$dirs; do \
	  if test -f "$$d/Makefile"; then \
	    $(MAKE) -C $$d $@; \
	    if test "$$?" != 0; then break; fi; \
	  fi; \
	done
	@if test "$@" = "distclean"; then \
	  echo "rm -f Makefile"; \
	  rm -f Makefile; \
	fi
Makefile : $(srcdir)/Makefile.in
	(cd $(top_builddir) && ./config.status)
