#-----------------------------------------------------------------------------
#
# ALPSConfig.cmake - ALPS CMake configuration file for external projects.
#
# This file is configured by ALPS and used by the UseALPS.cmake module
# to load ALPS's settings for an external project.

# The ALPS include file directories.
set(ALPS_INCLUDE_DIRS "@ALPS_INCLUDE_DIRS_CONFIG@")

# The ALPS library directories.
set(ALPS_LIBRARY_DIRS "@ALPS_LIBRARY_DIRS_CONFIG@")

# The ALPS runtime library directories.  Note that if
# ALPS_CONFIGURATION_TYPES is set (see below) then these directories
# will be the parent directories under which there will be a directory
# of runtime binaries for each configuration type.
set(ALPS_RUNTIME_LIBRARY_DIRS "@ALPS_RUNTIME_LIBRARY_DIRS_CONFIG@")

# The ALPS version number.
SET(ALPS_VERSION_MAJOR "@ALPS_VERSION_MAJOR@")
SET(ALPS_VERSION_MINOR "@ALPS_VERSION_MINOR@")
SET(ALPS_VERSION_BUILD "@ALPS_VERSION_BUILD@")

# The location of the UseALPS.cmake file.
set(ALPS_USE_FILE "@ALPS_USE_FILE@")

# ALPS Configuration options.
set(ALPS_BUILD_SHARED_LIBS "@BUILD_SHARED_LIBS@")
set(ALPS_BUILD_TYPE @CMAKE_BUILD_TYPE@)

# MPI
set(MPI_FOUND "@MPI_FOUND@")
set(MPI_DEFINITIONS "@MPI_DEFINITONS@")
set(MPI_INCLUDE_DIR "@MPI_INCLUDE_DIR@")
set(MPI_LINKER_FLAGS "@MPI_LINKER_FLAGS@")
set(MPI_LIBRARIES "@MPI_LIBRARIES@")

# LAPACK
set(LAPACK_FOUND "@LAPACK_FOUND@")
set(LAPACK_DEFINITIONS "@LAPACK_DEFINITIONS@")
set(LAPACK_LINKER_FLAGS "@LAPACK_LINKER_FLAGS@")
set(LAPACK_LIBRARIES "@LAPACK_LIBRARIES@")

# SQLite
set(SQLite_FOUND "@SQLite_FOUND@")
set(SQLite_INCLUDE_DIR "@SQLite_INCLUDE_DIR@")
set(SQLite_LIBRARIES "@SQLite_LIBRARIES@")

# LPSolve
set(LPSolve_FOUND "@LPSolve_FOUND@")
set(LPSolve_INCLUDE_DIR "@LPSolve_INCLUDE_DIR@")
set(LPSolve_LIBRARIES "@LPSolve_LIBRARIES@")

# HDF5
set(HDF5_FOUND "@HDF5_FOUND@")
set(HDF5_INCLUDE_DIR "@HDF5_INCLUDE_DIR@")
set(HDF5_LIBRARIES  "@HDF5_LIBRARIES@")

# Set of extra header paths and libraries ALPS requries
set(ALPS_EXTRA_DEFINITIONS "@ALPS_EXTRA_DEFINITIONS@")
set(ALPS_EXTRA_INCLUDE_DIRS "@ALPS_EXTRA_INCLUDE_DIRS@")
set(ALPS_EXTRA_LINKER_FLAGS "@ALPS_EXTRA_LINKER_FLAGS@")
set(ALPS_EXTRA_LIBRARIES "@ALPS_EXTRA_LIBRARIES@")
