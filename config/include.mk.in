# shell

SHELL = @SHELL@

# path

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datadir = @datadir@
datarootdir = @datarootdir@
libdir = @libdir@
includedir = @includedir@
docdir = @docdir@

# Makefiles

INCLUDE_MK = $(datadir)/@PACKAGE_NAME@/include.mk

# tools

AR = @AR@
LN_S = @LN_S@
RANLIB = @RANLIB@

# base

BASE_CPPFLAGS = @BASE_CPPFLAGS@
BASE_LDFLAGS = @BASE_LDFLAGS@
BASE_LIBS = @BASE_LIBS@

# for Boost

BOOST_CPPFLAGS = @BOOST_CPPFLAGS@
BOOST_LDFLAGS = @BOOST_LDFLAGS@
BOOST_LIBS = @BOOST_LIBS@
BOOST_SRCDIR = @BOOST_SRCDIR@

# for MPI

MPI_CPPFLAGS = @MPI_CPPFLAGS@
MPI_LDFLAGS = @MPI_LDFLAGS@
MPI_LIBS = @MPI_LIBS@

# for LAPACK

LAPACK_CPPFLAGS = @LAPACK_CPPFLAGS@
LAPACK_LDFLAGS = @LAPACK_LDFLAGS@
LAPACK_LIBS = @LAPACK_LIBS@

# for HDF5 library

HDF5_CPPFLAGS = @HDF5_CPPFLAGS@
HDF5_LDFLAGS = @HDF5_LDFLAGS@
HDF5_LIBS = @HDF5_LIBS@

# for XML parser

XML_CPPFLAGS = @XML_CPPFLAGS@
XML_LDFLAGS = @XML_LDFLAGS@
XML_LIBS = @XML_LIBS@

# C/C++ compiler

COMPILER = @COMPILER@

CC = @CC@
CFLAGS = @CFLAGS@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@

CPP = @CPP@
CXXCPP = @CXXCPP@

CPPFLAGS = $(BASE_CPPFLAGS) $(XML_CPPFLAGS) $(LAPACK_CPPFLAGS) $(HDF5_CPPFLAGS) $(BOOST_CPPFLAGS)  $(MPI_CPPFLAGS) -I$(includedir) 
LDFLAGS = $(BASE_LDFLAGS) $(BOOST_LDFLAGS) -L$(libdir) $(HDF5_LDFLAGS) $(LAPACK_LDFLAGS) $(XML_LDFLAGS) $(MPI_LDFLAGS)
LIBS = -lalps $(BOOST_LIBS) $(HDF5_LIBS) $(LAPACK_LIBS) $(XML_LIBS) $(MPI_LIBS) $(BASE_LIBS)

CPPFLAGS_MPI = $(CPPFLAGS)
LDFLAGS_MPI = $(LDFLAGS)
LIBS_MPI = $(LIBS)