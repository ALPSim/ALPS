#!/bin/sh

export XML_CATALOG_FILES=catalog.xml
export JAVACMD=@JAVA@
FO=`dirname "$1"`/`basename "$1" .docbook`.fo

echo @XSLTPROC@ --stringparam paper.type A4 --xinclude -o "$FO" @BOOST_DIR@/tools/boostbook/xsl/fo.xsl "$1"
@XSLTPROC@ --stringparam paper.type A4 --xinclude -o "$FO" @BOOST_DIR@/tools/boostbook/xsl/fo.xsl "$1"

[ "$?" -ne 0 ] && exit $?

echo @FOP_DIR@/@FOP_BIN@ "$FO" "$2"
@FOP_DIR@/@FOP_BIN@ "$FO" "$2"

exit $?
